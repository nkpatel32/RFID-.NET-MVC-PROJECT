@{
    Layout = "~/Views/UserPanal/_UserLayout.cshtml";
    ViewData["Title"] = "Edit Password";
}

<!-- Font Awesome for Show/Hide Password Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<script src="https://cdn.tailwindcss.com"></script>

<div class="flex min-h-screen justify-center items-center bg-gray-100 p-8">
    <div class="max-w-md w-full bg-white p-6 rounded-lg shadow-lg">
        <h3 class="text-2xl font-semibold text-center mb-4">Change Password</h3>

        <!-- Edit Password Form -->
        <form method="post" asp-action="EditPassword" asp-controller="User">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Old Password:</label>
                <input type="password" name="OldPassword" required class="w-full p-2 border border-gray-300 rounded-md" placeholder="Enter your old password">
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">New Password:</label>
                <input type="password" name="NewPassword" required class="w-full p-2 border border-gray-300 rounded-md" placeholder="Enter your new password">
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700">Confirm New Password:</label>
                <input type="password" name="ConfirmPassword" required class="w-full p-2 border border-gray-300 rounded-md" placeholder="Confirm your new password">
            </div>

            <button type="submit" class="w-full bg-green-500 text-white p-2 rounded-md hover:bg-green-600">
                Update Password
            </button>
        </form>
    </div>
</div>
