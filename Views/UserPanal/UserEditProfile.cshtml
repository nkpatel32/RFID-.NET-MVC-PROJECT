
@{
    Layout = "~/Views/UserPanal/_UserLayout.cshtml";
    ViewData["Title"] = "Edit Profile";
}

<div class="p-4">
    <h2>Edit Your Profile</h2>

    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <form asp-action="UserEditProfile" method="post">
        <div class="form-group">
            <label for="UserName">Full Name</label>
            <input type="text" id="UserName" name="UserName" class="form-control" value="@ViewBag.UserName" required>
        </div>
        <div class="form-group">
            <label for="UserEmail">Email</label>
            <input type="email" id="UserEmail" name="UserEmail" class="form-control" value="@ViewBag.UserEmail" required>
        </div>
        <div class="form-group">
            <label for="UserMobile">Mobile</label>
            <input type="tel" id="UserMobile" name="UserMobile" class="form-control" value="@ViewBag.UserMobile" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Profile</button>
    </form>
</div>