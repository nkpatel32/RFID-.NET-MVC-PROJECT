@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-green-500 text-white p-10 rounded-xl flex items-center my-10">
    <div class="w-1/2 flex justify-center">
        <img src="~/images/home.png" alt="RFID Illustration" class="w-2/3 rounded-2xl shadow-lg">
    </div>
    <div class="w-1/2">
        <h2 class="text-3xl font-bold flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c1.657 0 3-1.343 3-3S13.657 2 12 2 9 3.343 9 5s1.343 3 3 3zM4 22v-2c0-2.21 1.79-4 4-4h8c2.21 0 4 1.79 4 4v2H4z" />
            </svg>
            RFID-based Embedded Attendance System
        </h2>
        <p class="mt-2">An RFID-based embedded system website for attendance tracking, access control, and real-time monitoring.</p>
        <div class="mt-4 space-x-2">
            <a href="@Url.Action("Contact", "Home")" class="bg-white hover:bg-black text-green-500 py-2 px-4 rounded inline-block">Request a Demo</a>
            <a href="@Url.Action("Feature", "Home")" class="bg-white hover:bg-black text-green-500 py-2 px-4 rounded inline-block">Get Started Today</a>
        </div>

    </div>
</section>

<!-- Features Section -->
<section class="text-center p-10">
    <h3 class="text-2xl font-bold">All-in-One Student and Employee Management</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mt-6">
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
            <div class="flex justify-center mb-2">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path d="M8 7V3m8 4V3m-9 4h10a2 2 0 012 2v10a2 2 0 01-2 2H7a2 2 0 01-2-2V9a2 2 0 012-2z" />
                </svg>
            </div>
            <h4 class="font-bold">Take Attendance in Minutes</h4>
            <p class="text-sm mt-1">Easily track attendance efficiently.</p>
        </div>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
            <div class="flex justify-center mb-2">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                    <path d="M12 14l6.16-3.422A12.042 12.042 0 0112 21.5a12.042 12.042 0 01-6.16-10.922L12 14z" />
                </svg>
            </div>
            <h4 class="font-bold">Student Management</h4>
            <p class="text-sm mt-1">Track students and ensure seamless scheduling.</p>
        </div>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
            <div class="flex justify-center mb-2">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path d="M12 4v16m8-8H4" />
                </svg>
            </div>
            <h4 class="font-bold">Candidate Management</h4>
            <p class="text-sm mt-1">Simplify with powerful and quick candidate tracking.</p>
        </div>
        <div class="bg-gray-100 p-4 rounded-lg shadow-md">
            <div class="flex justify-center mb-2">
                <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path d="M11 17a4 4 0 01-4-4H5a6 6 0 0012 0h-2a4 4 0 01-4 4z" />
                    <path d="M4 4h16v4H4z" />
                </svg>
            </div>
            <h4 class="font-bold">Smart Reporting & Analytics</h4>
            <p class="text-sm mt-1">Gain insights with detailed reports.</p>
        </div>
    </div>
</section>

<!-- Pricing Section -->
<section class="bg-green-500 text-white p-10 text-center rounded-xl mt-10">
    <div class="flex justify-center mb-2">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24">
            <path d="M12 8c-1.657 0-3 1.343-3 3 0 1.103.897 2 2 2h2c1.103 0 2 .897 2 2s-.897 2-2 2h-1" />
            <path d="M12 6v2m0 8v2" />
        </svg>
    </div>
    <h3 class="text-2xl font-bold">Create your complete Package System</h3>
    <p class="mt-2">Automate for more than 10 roles at once with a comprehensive solution.</p>
    <button class="bg-white text-green-500 py-2 px-4 rounded mt-4">See pricing</button>
</section>
