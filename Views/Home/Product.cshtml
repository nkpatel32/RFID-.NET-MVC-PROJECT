@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product";
}

<!-- Hero Section -->
<section class="bg-green-500 text-white p-10 rounded-xl my-10">
    <div class="flex flex-col md:flex-row items-center">
        <div class="w-full md:w-1/2 mb-6 md:mb-0">
            <h2 class="text-3xl font-bold">Our RFID Attendance Solution</h2>
            <p class="mt-4 text-lg">A comprehensive attendance tracking system powered by RFID technology for educational institutions and businesses.</p>
            <ul class="mt-4 space-y-2">
                <li class="flex items-center">
                    <span class="mr-2">✓</span> Contactless attendance tracking
                </li>
                <li class="flex items-center">
                    <span class="mr-2">✓</span> Real-time monitoring
                </li>
                <li class="flex items-center">
                    <span class="mr-2">✓</span> Secure access control
                </li>
                <li class="flex items-center">
                    <span class="mr-2">✓</span> Automated reporting
                </li>
            </ul>
            <button class="mt-6 bg-white hover:bg-gray-200 text-green-500 py-2 px-6 rounded-lg font-medium">Request Demo</button>
        </div>
        <div class="w-full md:w-1/2 flex justify-center">
            <img src="~/images/rfid2.png" alt="RFID Product" class="w-4/5 rounded-lg shadow-xl">
        </div>
    </div>
</section>

<!-- Product Components -->
<section class="py-10">
    <h3 class="text-2xl font-bold text-center mb-8">Complete RFID Attendance System</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Hardware Component -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h4 class="text-xl font-bold text-green-600 mb-4">Hardware Components</h4>
            <div class="flex items-start mb-4">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">1</span>
                </div>
                <div>
                    <h5 class="font-semibold">RFID Readers</h5>
                    <p class="text-gray-600">High-performance RFID readers with customizable read ranges for various environments.</p>
                </div>
            </div>
            <div class="flex items-start mb-4">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">2</span>
                </div>
                <div>
                    <h5 class="font-semibold">RFID Cards/Tags</h5>
                    <p class="text-gray-600">Durable, secure RFID cards with unique identifiers for each user.</p>
                </div>
            </div>
            <div class="flex items-start">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">3</span>
                </div>
                <div>
                    <h5 class="font-semibold">Access Control Units</h5>
                    <p class="text-gray-600">Optional door controllers for secured entry management.</p>
                </div>
            </div>
        </div>

        <!-- Software Component -->
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h4 class="text-xl font-bold text-green-600 mb-4">Software Solutions</h4>
            <div class="flex items-start mb-4">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">1</span>
                </div>
                <div>
                    <h5 class="font-semibold">Attendance Management System</h5>
                    <p class="text-gray-600">Track, monitor, and manage attendance data with our intuitive dashboard.</p>
                </div>
            </div>
            <div class="flex items-start mb-4">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">2</span>
                </div>
                <div>
                    <h5 class="font-semibold">Reporting & Analytics</h5>
                    <p class="text-gray-600">Generate comprehensive reports and gain insights from attendance patterns.</p>
                </div>
            </div>
            <div class="flex items-start">
                <div class="bg-green-100 rounded-full p-2 mr-4">
                    <span class="text-green-600 font-bold">3</span>
                </div>
                <div>
                    <h5 class="font-semibold">Mobile Applications</h5>
                    <p class="text-gray-600">Access attendance data on-the-go with our mobile applications.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Use Cases -->
<section class="py-10 bg-gray-100 rounded-lg p-8 my-10">
    <h3 class="text-2xl font-bold text-center mb-8">Who Uses Our System?</h3>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="bg-green-100 inline-block rounded-full p-3 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
            </div>
            <h4 class="font-bold mb-2">Educational Institutions</h4>
            <p class="text-gray-600">Schools, colleges, and universities automate student attendance tracking.</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="bg-green-100 inline-block rounded-full p-3 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </div>
            <h4 class="font-bold mb-2">Corporate Offices</h4>
            <p class="text-gray-600">Businesses manage employee attendance and access control efficiently.</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md text-center">
            <div class="bg-green-100 inline-block rounded-full p-3 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
            </div>
            <h4 class="font-bold mb-2">Events & Conferences</h4>
            <p class="text-gray-600">Event organizers track attendee presence and manage access permissions.</p>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="bg-green-500 text-white p-10 text-center rounded-xl my-10">
    <h3 class="text-2xl font-bold">Ready to modernize your attendance system?</h3>
    <p class="mt-3 mb-6">Join thousands of satisfied clients who have transformed their operations with our RFID solution.</p>
    <div class="flex justify-center space-x-4">
        <button class="bg-white text-green-500 py-2 px-6 rounded-lg font-medium hover:bg-gray-100">Schedule a Demo</button>
        <button class="bg-transparent border-2 border-white text-white py-2 px-6 rounded-lg font-medium hover:bg-green-600">Contact Sales</button>
    </div>
</section>